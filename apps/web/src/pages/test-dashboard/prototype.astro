---
import DashboardLayout from "@/layouts/DashboardLayout.astro";
import { Button } from "@/components/ui/button";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Separator } from "@/components/ui/separator";
import { Switch } from "@/components/ui/switch";
import { Avatar, AvatarFallback, AvatarImage } from "@/components/ui/avatar";
import { Checkbox } from "@/components/ui/checkbox";
import { Slider } from "@/components/ui/slider";
import { ModeToggle } from "@/components/ModeToggle";
import { TabsDemo } from "@/components/Demo/TabsDemo";
import BadgesAndAvatars from "@/components/Demo/BadgesAndAvatars";
import FormElements from "@/components/Demo/FormElements";
import TableDemo from "@/components/Demo/TableDemo";
---

<DashboardLayout pageTitle="Component Prototype">
  <div class="p-6 space-y-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight">Component Test Page</h1>
        <p class="text-muted-foreground">Testing all available UI components</p>
      </div>
      <!-- <ModeToggle client:load /> -->
    </div>

    <Separator />

    <!-- Buttons Section -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Buttons</h2>
      <div class="flex flex-wrap gap-3">
        <Button client:load>Default</Button>
        <Button variant="secondary" client:load>Secondary</Button>
        <Button variant="destructive" client:load>Destructive</Button>
        <Button variant="outline" client:load>Outline</Button>
        <Button variant="ghost" client:load>Ghost</Button>
        <Button variant="link" client:load>Link</Button>
      </div>
      <div class="flex flex-wrap gap-3">
        <Button size="sm" client:load>Small</Button>
        <Button size="default" client:load>Default</Button>
        <Button size="lg" client:load>Large</Button>
        <Button size="icon" client:load>+</Button>
      </div>
    </section>

    <!-- Cards Section -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Cards</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <Card client:load>
          <CardHeader>
            <CardTitle>Music Library</CardTitle>
            <CardDescription>Your personal music collection</CardDescription>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Sync and manage your music across all platforms seamlessly.
            </p>
          </CardContent>
          <CardFooter>
            <Button className="w-full" client:load>View Library</Button>
          </CardFooter>
        </Card>

        <Card client:load>
          <CardHeader>
            <CardTitle>Statistics</CardTitle>
            <CardDescription>Your listening data</CardDescription>
          </CardHeader>
          <CardContent className="space-y-2">
            <div class="flex justify-between">
              <span class="text-sm">Songs synced</span>
              <span class="text-sm font-medium">1,247</span>
            </div>
            <!-- <Progress value={75} client:load /> -->
          </CardContent>
        </Card>

        <Card client:load>
          <CardHeader>
            <CardTitle>Quick Actions</CardTitle>
          </CardHeader>
          <CardContent className="space-y-3">
            <Button
              variant="outline"
              className="w-full justify-start"
              client:load
            >
              Create Playlist
            </Button>
            <Button
              variant="outline"
              className="w-full justify-start"
              client:load
            >
              Sync Now
            </Button>
          </CardContent>
        </Card>
      </div>
    </section>

    <!-- Tabs Section -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Tabs</h2>
      <TabsDemo client:load />
    </section>

    <section class="space-y-4">
      <FormElements client:load />
    </section>
    <!-- Badges and Avatars -->
    <section class="space-y-4">
      <BadgesAndAvatars client:load />
    </section>
    
    <!-- Tables Section -->
    <section class="space-y-4">
      <TableDemo client:load />
    </section>
    
    <!-- Progress and Status -->
    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Progress & Status</h2>
      <Card client:load>
        <CardHeader>
          <CardTitle>Sync Progress</CardTitle>
        </CardHeader>
        <CardContent className="space-y-4">
          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span>Spotify Sync</span>
              <span>85%</span>
            </div>
            <!-- <Progress value={85} client:load /> -->
          </div>
          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span>Apple Music Sync</span>
              <span>60%</span>
            </div>
            <!-- <Progress value={60} client:load /> -->
          </div>
          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span>YouTube Music Sync</span>
              <span>95%</span>
            </div>
            <!-- <Progress value={95} client:load /> -->
          </div>
        </CardContent>
      </Card>
    </section>
  </div>
</DashboardLayout>
